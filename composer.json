{
    "name": "ryangjchandler/downmark",
    "description": "Fast and extensible Markdown-subset parser for PHP.",
    "keywords": [
        "ryangjchandler",
        "downmark"
    ],
    "homepage": "https://github.com/ryangjchandler/downmark",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "RyanChandler\\Downmark\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RyanChandler\\Downmark\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
